@page
@model FitComrade.Pages.Account.ProductManager.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Products</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Products.ProductID" />
            <div class="form-group">
                <label asp-for="Products.ProductName" class="control-label"></label>
                <input asp-for="Products.ProductName" class="form-control" />
                <span asp-validation-for="Products.ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Products.ProductQuantity" class="control-label"></label>
                <input asp-for="Products.ProductQuantity" class="form-control" />
                <span asp-validation-for="Products.ProductQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Products.ProductPrice" class="control-label"></label>
                <input asp-for="Products.ProductPrice" class="form-control" />
                <span asp-validation-for="Products.ProductPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Products.ProductImage" class="control-label"></label>
                <select asp-for="Products.ProductImage" class="form-control">
                    <option>FitComrade Product.png</option>
                    <option>BCAA Amino.png</option>
                    <option>Clean Creatine.png</option>
                    <option>Fat Burner Xtreme.png</option>
                    <option>NoChill Pre Workout.png</option>
                    <option>UltraFocus Cafeïne.png</option>
                    <option>Vitamin C.png</option>
                    <option>Vitamin D3.png</option>
                    <option>Whey Protein.png</option>
                </select>
                <span asp-validation-for="Products.ProductImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
